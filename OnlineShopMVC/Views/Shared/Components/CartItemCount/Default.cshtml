@model int

@if (Model > 0)
{
    <span id="cartItemCount" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
        @Model
        <span class="visually-hidden">items in cart</span>
    </span>
}
else
{
    <span id="cartItemCount" class="d-none position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
        0
        <span class="visually-hidden">items in cart</span>
    </span>
}