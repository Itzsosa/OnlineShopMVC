@model OnlineShopMVC.Models.Product

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">Delete Product</h2>
                </div>
                <div class="card-body">
                    <h3 class="text-center text-danger mb-4">Are you sure you want to delete this product?</h3>

                    <div class="text-center mb-4">
                        <img src="@(Model.ImagePath ?? "/images/default-product.png")"
                             class="img-fluid rounded mb-3"
                             style="max-height: 300px; object-fit: cover;"
                             alt="@Model.Name" />
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Product Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4">Price</dt>
                        <dd class="col-sm-8">@Model.Price.ToString("C")</dd>

                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">@Model.Category?.Name</dd>

                        <dt class="col-sm-4">Stock</dt>
                        <dd class="col-sm-8">@Model.Stock</dd>
                    </dl>

                    <form asp-action="Delete" class="d-flex justify-content-between">
                        <input type="hidden" asp-for="ProductId" />
                        <input type="submit" value="Delete Permanently" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>