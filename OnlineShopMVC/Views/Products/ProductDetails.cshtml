@model OnlineShopMVC.Models.Product

<div class="container product-details-container">
    <div class="row">
        <!-- Imagen del producto -->
        <div class="col-md-6">
            <div class="card product-details-card">
                <img src="@(Model.ImagePath ?? "/images/default-product.png")"
                     alt="@Model.Name"
                     class="product-details-image">
                <div class="card-body text-center">
                    <h2 class="card-title">@Model.Name</h2>
                    <p class="text-muted">Category: @Model.Category?.Name</p>
                </div>
            </div>
        </div>

        <!-- Información del producto -->
        <div class="col-md-6">
            <div class="card product-details-card">
                <div class="card-body">
                    <h2>@Model.Name</h2>
                    <p class="text-muted">@Model.Description</p>

                    <hr>

                    <!-- Precio -->
                    <div class="mb-4 product-details-price">Price: @Model.Price.ToString("C")</div>

                    <!-- Stock -->
                    <div class="mb-4 product-details-stock">
                        Stock:
                        @if (Model.Stock > 0)
                        {
                            <span class="badge bg-success">In Stock</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Out of Stock</span>
                        }
                    </div>

                    <!-- Botón Agregar al Carrito -->
                    <form asp-controller="Cart" asp-action="AddToCart" method="post">
                        <input type="hidden" name="productId" value="@Model.ProductId" />
                        <button type="submit" class="btn product-details-add-to-cart">
                            <i class="bi bi-cart-plus"></i> Add to Cart
                        </button>
                    </form>

                    <hr>

                    <!-- Volver a la tienda -->
                    <div class="text-center mt-4">
                        <a asp-controller="Home" asp-action="Index" class="product-details-back">
                            <i class="bi bi-arrow-left"></i> Back to Store
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
