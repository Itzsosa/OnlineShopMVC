@model Order

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3>Payment Confirmation</h3>
                </div>
                <div class="card-body">
                    <h4>Order #@Model.OrderId</h4>
                    <p>Total Amount: $@Model.TotalAmount</p>

                    <table class="table">
                        <thead>
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Subtotal</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var detail in Model.OrderDetails)
                        {
                            <tr>
                                <td>@detail.Product.Name</td>
                                <td>@detail.Quantity</td>
                                <td>$@detail.Price</td>
                                <td>$@(detail.Quantity * detail.Price)</td>
                            </tr>
                        }
                        </tbody>
                    </table>

                    <form asp-action="ConfirmTransaction" asp-route-orderId="@Model.OrderId" method="post">
                        <button type="submit" class="btn btn-success btn-lg w-100">
                            Confirm Transaction
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>