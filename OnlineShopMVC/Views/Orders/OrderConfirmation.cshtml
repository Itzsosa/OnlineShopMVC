@{
    Layout = "_Layout";
}

<div class="container-fluid vh-100 d-flex align-items-center bg-light">
    <div class="row w-100 justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="currentColor" class="bi bi-check-circle text-success" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                        </svg>
                    </div>

                    <h2 class="card-title mb-3">Purchase Successful!</h2>

                    <div class="alert alert-info d-inline-block mb-4" role="alert">
                        <strong>Order Number:</strong> @ViewBag.OrderId
                    </div>

                    <p class="card-text text-muted mb-4">
                        Thank you for your purchase. Your order has been successfully processed, and you will receive more details via email shortly.
                    </p>

                    <div class="d-grid">
                        <a asp-controller="Home"
                           asp-action="Index"
                           class="btn btn-primary btn-lg rounded-pill hover-lift">
                            <i class="bi bi-cart-plus me-2"></i>Continue Shopping
                        </a>
                    </div>

                    <div class="mt-3">
                        <a asp-controller="Orders"
                           asp-action="DetailsClient"
                           asp-route-id="@ViewBag.OrderId"
                           class="text-decoration-none text-secondary">
                            View Order Details
                        </a>
                    </div>
                </div>
            </div>

            <div class="text-center mt-3">
                <small class="text-muted">
                    Need help? Contact our support at
                    <a href="mailto:support@myshop.com" class="text-primary">support@myshop.com</a>
                </small>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-lift {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-lift:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
</style>
